<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ECommerceApp.Pages.LoginPage"
             Title="Login Page">
    <ContentPage.Content>
        <StackLayout>
            <Entry
                x:Name="entSource"
                Placeholder="Source"/>

            <Entry
                Placeholder="Target"
                Text="{Binding Source={x:Reference entSource}, Path=Text, Mode=TwoWay}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>