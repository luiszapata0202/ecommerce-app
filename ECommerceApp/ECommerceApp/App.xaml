<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ECommerceApp.App">
    <Application.Resources>
        <Style TargetType="Label" x:Key="TitleLabel">
            <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
            <Setter Property="FontSize" Value="Large"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="TextColor" Value="#CE0B06"/>
        </Style>

        <Style TargetType="Entry" x:Key="FormEntry">
            <Setter Property="PlaceholderColor" Value="#80574D"/>
        </Style>

        <Style TargetType="Button" x:Key="SubmitButton">
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="BackgroundColor" Value="#CE0B06"/>
        </Style>
    </Application.Resources>
</Application>